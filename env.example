# Journal Index Integration Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Database Connection
DB_URL=jdbc:mysql://localhost:3306/journal_index?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Alternative: RDS Database Connection
# DB_URL=jdbc:mysql://your-rds-endpoint.region.rds.amazonaws.com:3306/journal_index?useSSL=true&serverTimezone=UTC
# DB_USERNAME=your_rds_username
# DB_PASSWORD=your_rds_password

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Region
AWS_REGION=us-east-1

# SQS Queue Configuration
SQS_QUEUE_NAME=journal-index-queue
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/journal-index-queue

# AWS Account ID (will be automatically detected by serverless)
# AWS_ACCOUNT_ID=123456789012

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Function Configuration
FUNCTION_TYPE=creator
BATCH_SIZE=10
MAX_RETRIES=3
RETRY_DELAY=300

# OAI Configuration
OAI_METADATA_PREFIX=oai_dc
OAI_BATCH_SIZE=100
OAI_TIMEOUT=30

# Processing Configuration
PROCESSING_TIMEOUT=300
MEMORY_SIZE=512

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG  # Uncomment for detailed logging

# CloudWatch Log Retention (days)
LOG_RETENTION_DAYS=14

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# CloudWatch Alarms
ENABLE_ALARMS=true
ERROR_THRESHOLD=5
DURATION_THRESHOLD=10000

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Serverless Framework
SLS_STAGE=dev
SLS_REGION=us-east-1

# Local Development
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_NAME=journal_index

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption
ENCRYPTION_KEY=your_encryption_key_here

# API Keys (if needed for external services)
# DOAJ_API_KEY=your_doaj_api_key
# CROSSREF_API_KEY=your_crossref_api_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_OJS_OAI=true
ENABLE_DOAJ=true
ENABLE_TECKIZ=true
ENABLE_CRON_IMPORT=true
ENABLE_HEALTH_CHECK=true

# Processing Options
ENABLE_BATCH_PROCESSING=true
ENABLE_PARALLEL_PROCESSING=false
ENABLE_CACHING=false

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# External API Timeouts
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Serverless Deployment
DEPLOYMENT_BUCKET=journal-index-integration-deployments
ENABLE_DEPLOYMENT_BUCKET=true

# Lambda Configuration
LAMBDA_TIMEOUT_CREATOR=300
LAMBDA_TIMEOUT_IMPORTER=180
LAMBDA_MEMORY_CREATOR=512
LAMBDA_MEMORY_IMPORTER=256

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# SNS Topics for notifications (optional)
# SNS_TOPIC_ERRORS=arn:aws:sns:us-east-1:123456789012:journal-index-errors
# SNS_TOPIC_SUCCESS=arn:aws:sns:us-east-1:123456789012:journal-index-success

# Email notifications (optional)
# NOTIFICATION_EMAIL=admin@yourcompany.com
